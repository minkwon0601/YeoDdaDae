<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mainicon"
            android:src="@drawable/main_icon_cut"
            android:adjustViewBounds="true"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/newparking"
            android:text="@string/new_start"
            android:textSize="18dp"
            android:textColor="@color/sub"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainicon"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:id="@+id/menubarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/menubar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/toFindParkImgBtn"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="15dp"
            android:background="@color/main"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/toFindParkImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/find_parking"
            app:layout_constraintBottom_toBottomOf="@+id/toFindParkImgBtn"
            app:layout_constraintStart_toStartOf="@+id/toFindParkImgBtn"
            app:layout_constraintTop_toTopOf="@+id/toFindParkImgBtn" />

        <TextView
            android:id="@+id/toFindParkTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="주차장 찾아가기\n Find parking lot"
            android:textAppearance="@style/find_parkin"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/toFindParkImgBtn"
            app:layout_constraintEnd_toEndOf="@+id/toFindParkImgBtn"
            app:layout_constraintStart_toEndOf="@+id/toFindParkImg"
            app:layout_constraintTop_toTopOf="@+id/toFindParkImgBtn" />


        <ImageButton
            android:id="@+id/toFindGasStationImgBtn"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:background="@color/main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toFindParkImgBtn" />

        <ImageView
            android:id="@+id/toFindGasStationImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/find_gasstation"
            app:layout_constraintBottom_toBottomOf="@+id/toFindGasStationImgBtn"
            app:layout_constraintStart_toStartOf="@+id/toFindGasStationImgBtn"
            app:layout_constraintTop_toTopOf="@+id/toFindGasStationImgBtn" />

        <TextView
            android:id="@+id/toFindGasStationTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="top"
            android:text="주유소 찾아가기\n Find gas station"
            android:textAppearance="@style/find_gas_st"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/toFindGasStationImgBtn"
            app:layout_constraintEnd_toEndOf="@+id/toFindGasStationImgBtn"
            app:layout_constraintStart_toEndOf="@+id/toFindGasStationImg"
            app:layout_constraintTop_toTopOf="@+id/toFindGasStationImgBtn" />


        <ImageButton
            android:id="@+id/toMyReportDiscountParkImgBtn"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:background="@color/main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toFindGasStationImgBtn" />

        <ImageView
            android:id="@+id/toMyReportDiscountParkImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/discount_park"
            app:layout_constraintBottom_toBottomOf="@+id/toMyReportDiscountParkImgBtn"
            app:layout_constraintStart_toStartOf="@+id/toMyReportDiscountParkImgBtn"
            app:layout_constraintTop_toTopOf="@+id/toMyReportDiscountParkImgBtn" />

        <TextView
            android:id="@+id/toMyReportDiscountParkImgTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="할인주차장 제보 평가\n Discount park report"
            android:textAppearance="@style/discount_park_report"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/toMyReportDiscountParkImgBtn"
            app:layout_constraintEnd_toEndOf="@+id/toMyReportDiscountParkImgBtn"
            app:layout_constraintStart_toEndOf="@+id/toMyReportDiscountParkImg"
            app:layout_constraintTop_toTopOf="@+id/toMyReportDiscountParkImgBtn" />

        <ImageButton
            android:id="@+id/toSttImgBtn"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="음성을\n인식해주세요"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toMyReportDiscountParkImgBtn" />

        <ImageView
            android:id="@+id/toSttMicrophone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/microphone"
            app:layout_constraintBottom_toBottomOf="@+id/toSttImgBtn"
            app:layout_constraintEnd_toStartOf="@+id/toSttTxt"
            app:layout_constraintStart_toStartOf="@+id/toSttImgBtn"
            app:layout_constraintTop_toTopOf="@+id/toSttImgBtn" />

        <TextView
            android:id="@+id/toSttTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/microphone"
            android:textAppearance="@style/microphone"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/toSttImgBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/toSttImgBtn"
            app:layout_constraintTop_toTopOf="@+id/toSttImgBtn" />

        <FrameLayout
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/toSttImgBtn"
            app:layout_constraintTop_toBottomOf="@+id/toMyReportDiscountParkImgBtn"
            app:srcCompat="@drawable/parking_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
