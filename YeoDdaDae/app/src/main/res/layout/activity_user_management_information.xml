<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserManagementInformationActivity">

    <ImageButton
        android:id="@+id/userManagementInfoBackBtn"
        android:src="@drawable/back_icon"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:text="사용자 관리"
        android:textSize="25sp"
        android:textColor="@color/sub"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/userManagementInfoBackBtn"
        app:layout_constraintBottom_toBottomOf="@+id/userManagementInfoBackBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ScrollView
        android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/userManagementInfoBackBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/userManagementInfoBackBoardConstLayout"
                android:background="@drawable/round_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/userManagementInfoIdTxt"
                    android:text="ID"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/userManagementInfoIdContentTxt"
                    android:textSize="17sp"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:textColor="@color/sub"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoIdTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoIdContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/userManagementInfoEmailTxt"
                    android:text="이메일"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoIdContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/userManagementInfoEmailContentTxt"
                    android:textSize="17sp"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:textColor="@color/sub"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoEmailTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoEmailContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/userManagementInfoYdPointTxt"
                    android:text="여따대포인트"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoEmailContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/userManagementInfoYdPointConstLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoYdPointTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/userManagementInfoYdPointContentTxt"
                        android:text="0"
                        android:textSize="17sp"
                        android:fontFamily="@font/paperlogy_5medium"
                        android:textColor="@color/sub"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <TextView
                        android:text="pt"
                        android:textSize="15sp"
                        android:fontFamily="@font/paperlogy_5medium"
                        android:textColor="@color/sub"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/userManagementInfoYdPointContentTxt"
                        app:layout_constraintBottom_toBottomOf="@+id/userManagementInfoYdPointContentTxt"
                        app:layout_constraintLeft_toRightOf="@+id/userManagementInfoYdPointContentTxt"
                        android:layout_marginLeft="5dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoYdPointConstLayout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/userManagementInfoRegisterTimeTxt"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:text="가입 시각"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoYdPointConstLayout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/userManagementInfoRegisterTimeContentTxt"
                    android:textSize="17sp"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:textColor="@color/sub"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoRegisterTimeTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoRegisterTimeContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/userManagementInfoStatusTxt"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:text="상태"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoRegisterTimeContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/userManagementInfoStatusContentTxt"
                    android:textSize="17sp"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:textColor="@color/sub"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoStatusTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoStatusContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/userManagementInfoPauseLimitTxt"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:text="정지 기한"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoStatusContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/userManagementInfoPauseLimitContentTxt"
                    android:textSize="17sp"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:textColor="@color/sub"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userManagementInfoPauseLimitTxt"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/userManagementInfoBackBoardConstLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" >

                <ImageButton
                    android:id="@+id/userManagementInfoForceWithdrawalBtn"
                    android:src="@drawable/gradate_cancel_button"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:text="강제 탈퇴"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/userManagementInfoForceWithdrawalBtn"
                    app:layout_constraintRight_toRightOf="@+id/userManagementInfoForceWithdrawalBtn"
                    app:layout_constraintLeft_toLeftOf="@+id/userManagementInfoForceWithdrawalBtn"
                    app:layout_constraintTop_toTopOf="@+id/userManagementInfoForceWithdrawalBtn" />

                <ImageButton
                    android:id="@+id/userManagementInfoPauseBtn"
                    android:src="@drawable/gray_button"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/userManagementInfoForceWithdrawalBtn"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/userManagementInfoPauseTxt"
                    android:text="사용 정지"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/userManagementInfoPauseBtn"
                    app:layout_constraintBottom_toBottomOf="@+id/userManagementInfoPauseBtn"
                    app:layout_constraintLeft_toLeftOf="@+id/userManagementInfoPauseBtn"
                    app:layout_constraintRight_toRightOf="@+id/userManagementInfoPauseBtn" />

                <ImageButton
                    android:id="@+id/userManagementInfoResumeBtn"
                    android:src="@drawable/gradate_calculate_button"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/userManagementInfoForceWithdrawalBtn"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/userManagementInfoResumeTxt"
                    android:text="사용 재개"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/userManagementInfoResumeBtn"
                    app:layout_constraintRight_toRightOf="@+id/userManagementInfoResumeBtn"
                    app:layout_constraintLeft_toLeftOf="@+id/userManagementInfoResumeBtn"
                    app:layout_constraintTop_toTopOf="@+id/userManagementInfoResumeBtn" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>